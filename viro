#!/bin/bash
export VIRO_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
. "$VIRO_HOME/src/utils.sh"

YES=""
PARAMS=""
while (( "$#" )); do case "$1" in
  -h|--help) man viro && exit 0;;
  --yes|-y|--force|-f) YES="y" && shift;;

  --) shift && break;;
  -*|--*) log "Error: Unsupported flag $1" >&2 && exit 1;;
  *) PARAMS="$PARAMS $1" && shift;;
esac; done
eval set -- "$PARAMS"

case "$1" in
  install)
    PROFILE="$(
      if [ -f "$HOME/.bash_profile" ]; then
      echo "$HOME/.bash_profile"
    else
      echo "$HOME/.profile"
    fi)"
    [ -n "$YES" ] || {
      log "two lines will be added to $PROFILE:"
      log "   at the top: the path to your viro installation will be exported as \$VIRO_HOME"
      log "   at the bottom: viro core will be sourced"
    }
    if [ -n "$YES" ] || yorn "Continue?"; then
      [ -f "$PROFILE" ] && sed -i '/VIRO_HOME/d' "$PROFILE"
      echo ". \"\$VIRO_HOME/src/core.sh\"" >> "$PROFILE"
      sed -i "1i export VIRO_HOME=\"$VIRO_HOME\"" "$PROFILE"
      . "$PROFILE"
    else
      log "Maybe make a backup first?"
      log "try: mv $PROFILE $PROFILE.bak"
    fi
    ;;
  *)
    [ -f "$VIRO_HOME/src/$1.sh" ] \
      && YES="$YES" . "$VIRO_HOME/src/$1.sh" "${@:2}"
    ;;
esac
